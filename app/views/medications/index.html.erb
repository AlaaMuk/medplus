<p id="notice"><%= notice %></p>

<h1>Listing Medications</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Patient</th>
      <th>Hcprof</th>
      <th>Name</th>
      <th>Description</th>
      <th>Quantitymed</th>
      <th>Units</th>
      <th>Dosage</th>
      <th>Units</th>
      <th>Taken</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Specialnotes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medications.each do |medication| %>
      <tr>
        <td><%= medication.user %></td>
        <td><%= medication.patient %></td>
        <td><%= medication.hcprof %></td>
        <td><%= medication.name %></td>
        <td><%= medication.description %></td>
        <td><%= medication.quantityMed %></td>
        <td><%= medication.units %></td>
        <td><%= medication.dosage %></td>
        <td><%= medication.units %></td>
        <td><%= medication.taken %></td>
        <td><%= medication.startDate %></td>
        <td><%= medication.endDate %></td>
        <td><%= medication.specialNotes %></td>
        <td><%= link_to 'Show', medication %></td>
        <td><%= link_to 'Edit', edit_medication_path(medication) %></td>
        <td><%= link_to 'Destroy', medication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

